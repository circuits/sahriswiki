== Sahris configuration example with Nginx ==

<<code lang="nginx">>
server { 
	access_log off;
	error_log logs/wiki.kbeezie.error.log;
	
	server_name wiki.kbeezie.com;
	root /opt/apps/wiki/sahriswiki/htdocs;

	location / {
		proxy_set_header X-Forwarded-For $remote_addr;
		proxy_set_header Host $host;
		#proxy_pass http://127.0.0.1:8000;
		proxy_pass http://unix:/opt/apps/wiki/sahris.sock:/;
	}

	# In the static configurations you can place options such as cache control	
	location /css { }
	location /img { }
	location /js { }
	
	include drop;
}
<</code>>